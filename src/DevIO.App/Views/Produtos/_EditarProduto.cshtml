@using System.IO.Compression
@model DevIO.App.ViewModels.ProdutoViewModel


@{
    ViewData["Title"] = "Editar Produto";
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">x</span><span class="sr-only">Fechar</span>
    </button>
</div>

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    @*<form enctype="multipart/form-data" asp-action="Edit" method="POST">*@
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Imagem" />
        @*@Html.HiddenFor(x => x.ImagemUpload)*@

        @*<input type="hidden" asp-for="ImagemUpload" />*@

        @*<div class="row">*@
        <div class="col-md-12">

            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label><br />
                <label><b>@Model.Fornecedor.Nome</b></label>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imagem Atual</label><br />
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 70px; height: 100px" />
            </div>

            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload" onclick="javascript:fotoAlterada();">
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
        </div>

        @*</div>*@
        <div class="modal-footer">
            <input type="submit" name="Edit" value="Salvar" class="btn btn-primary" />
            <input type="button" name="Fechar" value="Fechar" class="btn btn-secondary" data-dismiss="modal" />
        </div>

    </div>
</form>

